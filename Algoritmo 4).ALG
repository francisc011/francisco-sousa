Algoritmo "Área_do_Trapézio"
 // Autor:Francisco Sousa
 // Data:14-09-2017
 // Descrição:Área do Trapézio
Var 
    area, base maipr, base menor, altura : real
    início
    escreva("Qual a base maior?")
    leia(base maior)
    escreva("Qual é a base menor?")
    leia(base menor)
    escreva("Qual é a altura?")
    leia(altura)
    area <- (base maior + base menor) * altura/2
    escreva("A área é, area")
Fimalgoritmo
